<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/tvname04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_name04"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etname04"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:textSize="40dp"
        app:layout_constraintStart_toEndOf="@+id/tvname04"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <Spinner
        android:id="@+id/sptype04"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/tvtype04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvdateopened04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="92dp"
        android:text="@string/tv_date_opened04"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/spstatus04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04" />

    <TextView
        android:id="@+id/tvpics04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="216dp"
        android:layout_marginTop="156dp"
        android:text="@string/tv_pics04"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/tvreview04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04" />

    <TextView
        android:id="@+id/tvpicsub104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="0dp"
        android:text="@string/pic1"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/etreview04"
        app:layout_constraintTop_toBottomOf="@+id/iv104" />

    <TextView
        android:id="@+id/tvpicsub204"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="0dp"
        android:text="@string/pic2"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tvpicsub104"
        app:layout_constraintTop_toBottomOf="@+id/iv204" />

    <TextView
        android:id="@+id/tvpicsub304"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="0dp"
        android:text="@string/pic3"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tvpicsub204"
        app:layout_constraintTop_toBottomOf="@+id/iv304" />

    <TextView
        android:id="@+id/tvpicsub404"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="0dp"
        android:text="@string/pic4"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tvpicsub304"
        app:layout_constraintTop_toBottomOf="@+id/iv404" />

    <EditText
        android:id="@+id/etdateopened04"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="92dp"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/tvdateopened04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/iv104"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_imageview"
        android:onClick="onItemClick_iv1"
        app:layout_constraintStart_toEndOf="@+id/etreview04"
        app:layout_constraintTop_toBottomOf="@+id/tvpics04" />

    <ImageView
        android:id="@+id/iv204"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_imageview"
        android:onClick="onItemClick_iv2"
        app:layout_constraintStart_toEndOf="@+id/iv104"
        app:layout_constraintTop_toBottomOf="@+id/tvpics04" />

    <ImageView
        android:id="@+id/iv304"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_imageview"
        android:onClick="onItemClick_iv3"
        app:layout_constraintStart_toEndOf="@+id/iv204"
        app:layout_constraintTop_toBottomOf="@+id/tvpics04" />

    <ImageView
        android:id="@+id/iv404"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/border_imageview"
        android:onClick="onItemClick_iv4"
        app:layout_constraintStart_toEndOf="@+id/iv304"
        app:layout_constraintTop_toBottomOf="@+id/tvpics04" />

    <TextView
        android:id="@+id/tvtype04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:text="@string/tv_type04"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/etnumber04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04" />

    <EditText
        android:id="@+id/etreview04"
        android:layout_width="277dp"
        android:layout_height="138dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="216dp"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvname04"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvstatus04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:text="@string/tv_status04"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvnumber04" />

    <Spinner
        android:id="@+id/spstatus04"
        android:layout_width="160dp"
        android:layout_height="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="100dp"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/tvstatus04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etnumber04"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:textSize="26dp"
        app:layout_constraintStart_toEndOf="@+id/tvnumber04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/tvnumber04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:text="@string/tv_number04"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvname04" />

    <TextView
        android:id="@+id/tvreview04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="28dp"
        android:text="@string/tv_review04"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvstatus04" />

    <Button
        android:id="@+id/btadd04"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginStart="596dp"
        android:layout_marginTop="388dp"
        android:background="@color/olympus_blue"
        android:text="@string/bt_add04"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvname04" />

    <Button
        android:id="@+id/btdatepicker04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:onClick="showDatePickerDialog"
        android:background="@color/olympus_blue"
        app:layout_constraintStart_toEndOf="@+id/etdateopened04"
        app:layout_constraintTop_toBottomOf="@+id/tvname04" />
</androidx.constraintlayout.widget.ConstraintLayout>